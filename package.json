{
  "name": "ai-reality-check-website",
  "version": "1.0.0",
  "description": "Performance optimized website for AI Reality Check",
  "scripts": {
    "dev": "vite",
    "build:vite": "vite build",
    "preview": "vite preview",
    "optimize-videos": "node scripts/video-optimizer.js",
    "optimize-images": "node scripts/image-optimizer.js",
    "build": "npm run build:vite",
    "build:legacy": "npm run build:css && node scripts/build-html.js && npm run optimize-videos && npm run optimize-images",
    "build:css": "tailwindcss -i ./css/tailwind-input.css -o ./css/tailwind.css --minify",
    "watch:css": "tailwindcss -i ./css/tailwind-input.css -o ./css/tailwind.css --watch",
    "build:html": "node scripts/build-html.js",
    "serve": "python -m http.server 8000",
    "validate": "node scripts/validate-assets.js",
    "lint": "npm run lint:js && npm run lint:css && npm run lint:html",
    "lint:js": "eslint js/ scripts/ --ext .js --ignore-pattern '*.min.js'",
    "lint:css": "stylelint css/**/*.css --ignore-pattern '*.min.css'",
    "lint:html": "htmlhint '*.html' '{articles,case-studies,portfolio,resources,contact,creative}/**/*.html' --ignore 'node_modules/**' --ignore '_unused/**'",
    "lint:fix": "npm run lint:js -- --fix && npm run lint:css -- --fix",
    "test": "npm run test:html && npm run test:links && npm run test:a11y",
    "test:html": "html-validator --format=text --verbose **/*.html",
    "test:links": "blc http://localhost:8000 -ro",
    "test:a11y": "node scripts/accessibility-test.js",
    "test:lighthouse": "lhci autorun",
    "quality": "npm run lint && npm run test",
    "qa": "node scripts/quality-assurance.js",
    "qa:lint": "node scripts/quality-assurance.js --suite=lint",
    "qa:fix": "node scripts/quality-assurance.js --fix",
    "precommit": "lint-staged",
    "prepare": "husky install"
  },
  "devDependencies": {
    "@lhci/cli": "^0.12.0",
    "@vitejs/plugin-legacy": "^7.2.1",
    "axe-core": "^4.8.4",
    "broken-link-checker": "^0.7.8",
    "csso-cli": "^4.0.2",
    "eslint": "^8.57.0",
    "eslint-config-standard": "^17.1.0",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-n": "^16.6.2",
    "eslint-plugin-promise": "^6.1.1",
    "html-validator": "^6.0.1",
    "htmlhint": "^1.1.4",
    "husky": "^8.0.3",
    "imagemin": "^8.0.1",
    "imagemin-mozjpeg": "^10.0.0",
    "imagemin-pngquant": "^9.0.2",
    "imagemin-webp": "^7.0.0",
    "lint-staged": "^15.2.0",
    "puppeteer": "^21.11.0",
    "sharp": "^0.34.5",
    "stylelint": "^16.2.1",
    "stylelint-config-css-modules": "^4.4.0",
    "stylelint-config-standard": "^36.0.0",
    "tailwindcss": "^3.4.18",
    "terser": "^5.44.1",
    "vite": "^7.2.4",
    "vite-plugin-compression": "^0.5.1",
    "vite-plugin-image-optimizer": "^2.0.3"
  },
  "keywords": [
    "website",
    "performance",
    "optimization",
    "ai",
    "reality-check",
    "quality-assurance"
  ],
  "author": "AI Reality Check",
  "license": "MIT",
  "lint-staged": {
    "*.js": [
      "eslint --fix --ignore-pattern '*.min.js'"
    ],
    "*.css": [
      "stylelint --fix --ignore-pattern '*.min.css'"
    ],
    "*.html": [
      "htmlhint --ignore 'node_modules/**' --ignore '_unused/**'"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "npm run qa:lint"
    }
  },
  "dependencies": {
    "@axe-core/puppeteer": "^4.10.2",
    "glob": "^11.1.0",
    "gsap": "^3.12.5",
    "motion": "^10.18.0"
  }
}